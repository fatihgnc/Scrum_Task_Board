@using Scrum_Task_Board.Models
@model Task

@{
    ViewBag.Title = "İş Sil";
}

<div class="container-fluid ml-2 mt-4">
    <h2>İş Sil</h2>
</div>
<hr />
<p class="ml-5 mb-5" style="font-weight: 400; font-size:1.2em;">Aşağıdaki işi silmek istiyor musunuz?</p>

@using (Html.BeginForm())
{
    <div class="form-group">
        <label for="taskHeader">İş Başlığı: </label>
        @Html.TextAreaFor(model => model.taskHeader, new { @class = "form-control", id = "taskHeader", @readonly="readonly", @type = "text", rows = 3 })
    </div>

    <div class="form-group">
        <label for="taskDefinition">İş İçeriği: </label>
        @Html.TextAreaFor(model => model.taskDefinition, new { @class = "form-control", id = "taskDefinition", @readonly = "readonly", @type = "text", rows = 5 })
    </div>

    <div class="form-group">
        <label for="taskDate">İş Tarihi: </label>
        @Html.TextBoxFor(model => model.taskDate, new { @class = "form-control", id = "taskDate", @readonly = "readonly", @type = "datetime" })
    </div>

    <div class="form-group">
        <label for="taskState">İş durumu: </label>
        @Html.DropDownListFor(model => model.taskStateID, (List<SelectListItem>)ViewBag.states, new { @class = "form-control", id = "taskState", disabled="disabled" })
    </div>

    <div class="form-group">
        <label for="taskCard">Bağlı olduğu kart ID'si: </label>
        @Html.TextBoxFor(model => model.cardID, new { @class = "form-control", id = "taskCard", @readonly = "readonly" })
    </div>

    <div class="form-group">
        <input type="submit" value="Sil" class="btn btn-danger w-100" />
    </div>
}