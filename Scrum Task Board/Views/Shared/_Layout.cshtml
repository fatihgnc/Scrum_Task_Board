<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <style>
        * {
            font-family: 'Poppins', sans-serif;
        }

        .tasks > div {
            display: none;
        }

    </style>
</head>
<body style="        background: linear-gradient(to bottom, rgba(180, 98, 98, 0.51), rgba(160, 147, 78, 0.80));
        min-height: 100vh;">
    <div class="container-fluid body-content p-5">
        <div class="container-fluid p-3 mb-3" id="nav">
            @Html.ActionLink("Ana sayfa", "Home", "App", null, new { @style = "font-size: 1.2em; color:black; letter-spacing: -1px;" })
            @Html.ActionLink("Kartlar", "Cards", "App", null, new { @style = "font-size: 1.2em; color:black;", @class = "ml-2 lead" })
        </div>
        @RenderBody()
        <hr />
        <footer>
            <p class="text-center">&copy; @DateTime.Now.Year - Scrum Task Board</p>
        </footer>
    </div>
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
